/* -- BASIC PAGE & TYPE STYLES --
______________________________________*/

body{
  background-color:#ffeffc;
}
/*body#vancouver a#logovitaminv{
  background:transparent url(images/header/v_logo.gif) no-repeat bottom left;
}
*/

body#vancouver #inner-wrapper {
	border-left:1px solid #E7C5E4;
}
/* ------ Type Styles ----------*/

a, a:link, a:active, a:visited, 
h1.title, .meta-block .dose-links h4, #block-block-10 li { 
	color: #A6519B;
}
body#vancouver .block .more-link a{
	border:1px solid #e9cbe7;
	padding:2px 5px;
}
body#vancouver .block .more-link a:hover { 
	color: #e9cbe7;
}
body#vancouver .node .content h1, body#vancouver .node .content h2, body#vancouver .node .content h3, body#vancouver .node .content h4, body#vancouver .node .content h5 {
  color: #D294CE;
}
body#vancouver ul.secondary a.active{
	border-bottom:1px solid #A6519B;
	color:#A6519B;
}

/* ------ hold site content ----------*/

#holds-content {
  border-bottom:1px solid #E7C5E4;
  background:#fff url(images/background/content_tile_V_bg.gif) repeat-y top right;
}

/* ------ HEADER ----------*/

#header {
  background:transparent url(images/header/v_header.gif) no-repeat top right;
}
a#login-link{
  background:transparent url(images/header/v_login.gif) no-repeat top left;
}
a#logout-link{
  background:transparent url(images/header/v_logout.gif) no-repeat top left;
}
a#subscribe-link{
  background:transparent url(images/header/v_subscribe.gif) no-repeat top left;
}

/* ------ Forum Graphic ----------*/

body#vancouver div#block-block-20 .content h2 a{
  background:transparent url(images/sidebar/forum_v.gif) no-repeat top left;
}

/* ----------- Top 10, Little Black book, and Steals -----------*/

body#vancouver a#top10{
	background: transparent url(images/sidebar/v_top10.gif) no-repeat top left;
}
body#vancouver a#blackbook{
	background: transparent url(images/sidebar/v_book.gif) no-repeat top left;
}
body#vancouver a.steals{
	background: transparent url(images/sidebar/v_deals.gif) no-repeat top left;
}

/* ---- SITE SPECIFIC ---
_________________________________________________ */

/* ------------  DailyDose Info/Links block ----------- */

.meta-block .dose-links {
	background: transparent url(images/content/block-bottom-vancouver-logo.png) no-repeat bottom left;
}
* html .meta-block .dose-links {
	background: transparent url(images/content/block-bottom-vancouver-ie6.gif) no-repeat bottom left;
}

/* ------------  User Registration / Favorite ----------- */

body#vancouver #content form#user-register fieldset legend,
body#vancouver #myfavourites .afavourite span.topic,
body#vancouver #myfavourites .afavourite h4 {
	color:#A6519B;
}

/* ------------ Forum ----------- */

body#vancouver #forum thead{
	background-color:#A6519B;
}
body#vancouver .post-information .submitted span{
	color:#A6519B;
}
body#vancouver.ntype-forum .node .links{
	background-color:#A6519B;
}
body#vancouver.ntype-forum .node .links a, body#vancouver #forum thead a {
  color:#fff;
}

/* ------------ Top 10 ----------- */

body#vancouver .top10-title{
	background: transparent url(images/content/v_top10.gif) no-repeat top left;
}
body#vancouver .taxonomy-right{
	color:#A6519B;
}

/* ------------ Editors Blog----------- */

body#vancouver a.editors-blog {
	background: transparent url(images/editorsblog/eblog_tile_v.jpg) no-repeat top left;
}


/* --------- Steals and Deals --------- */

body#vancouver .ntype-stealsanddeals table table tr td, body#vancouver .ntype-stealsanddealskids table table tr td{
	border:1px solid #E7C5E4;
}
body#vancouver .ntype-stealsanddeals .steals-content h3, body#vancouver .ntype-stealsanddealskids .steals-content h3{
	color:#D294CE;
}

/* --------- Archive --------- */

body#vancouver #archive-container .archive_month li a,
body#vancouver #archive-container li.active li.active p,
body#vancouver #archive-container #archive-categories li.active{
	color:#A6519B;
}
/* Language Thickbox */
#vd_Language_Selector h2 {
	background: transparent url(/themes/DailyDose/images/montreal_modal_v.gif) no-repeat scroll left top;
}

/* ---------- Little Black Book categories listing ---------- */

body#toronto div#lbb_categories {
	padding-top: 6px;
	height: 103px;
	background: #693267 url(images/lbb/lbb_toronto_bg.gif) no-repeat top left;
	width: 524px;
}

body#toronto div#lbb_categories a, body#toronto div#lbb_categories h5 {
	color:#fff;
}
/* download link */
.node .content p.downloadlink {
  font-style:italic;
  font-size: 18px !important;
  margin: 10px 0pt;
  line-height: 38px;
  background-repeat: no-repeat;
  background-position: 0 50%;
  background-image: url(images/download_v.gif);
}
.downloadlink a {
  padding-left: 43px;
  text-decoration: underline;
  border-bottom: none !important;
}

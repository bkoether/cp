/* -- BASIC PAGE & TYPE STYLES --
______________________________________*/

body#toronto {
  background-color:#e6f5ff;
}
body#toronto a#logovitaminv{
  background:transparent url(images/header/t_logo.gif) no-repeat bottom left;
}

body#toronto #inner-wrapper {
  border-left:1px solid #BCD9F0;
}

/* ------ Type Styles ----------*/

body#toronto a, body#toronto a:link, body#toronto a:active, body#toronto a:visited, 
body#toronto h1.title, body#toronto .meta-block .dose-links h4, #block-block-19 li{ 
	color: #0075AD; 
}
body#toronto .block .more-link a{
	border:1px solid #BCD9F0;
	padding:2px 5px;
}
body#toronto .block .more-link a:hover { 
	color:#BCD9F0;
}
body#toronto .node .content h1, body#toronto .node .content h2, body#toronto .node .content h3, body#toronto .node .content h4, body#toronto .node .content h5 {
  color: #0075AD;
}
body#toronto ul.secondary a.active{
	border-bottom:1px solid #0075AD;
	color:#0075AD;
}

/* ------ hold site content ----------*/

body#toronto #holds-content {
  border-bottom:1px solid #BCD9F0;
  background:#fff url(images/background/content_tile_T_bg.gif) repeat-y top right;
}

/* ------ HEADER ----------*/

body#toronto #header {
  background:transparent url(images/header/t_header.gif) no-repeat top right;
}
body#toronto a#login-link{
  background:transparent url(images/header/t_login.gif) no-repeat top left;
}
body#toronto a#logout-link{
  background:transparent url(images/header/t_logout.gif) no-repeat top left;
}
body#toronto a#subscribe-link{
  background:transparent url(images/header/t_subscribe.gif) no-repeat top left;
}
/* ------ Forum Graphic ----------*/

body#toronto div#block-block-20 .content h2 a{
  background:transparent url(images/sidebar/forum_t.gif) no-repeat top left;
}

/* ----------- Sidebar Top 10, Little Black book, and Steals -----------*/

body#toronto a#top10{
	background: transparent url(images/sidebar/t_top10.gif) no-repeat top left;
}
body#toronto a#blackbook{
	background: transparent url(images/sidebar/t_book.gif) no-repeat top left;
}
body#toronto a.steals{
	background: transparent url(images/sidebar/t_deals.gif) no-repeat top left;
}

/* ---- SITE SPECIFIC ---
_________________________________________________ */

/* ------------  DailyDose Info/Links block ----------- */

body#toronto .meta-block .dose-links {
	background: transparent url(images/content/block-bottom-toronto-logo.png) no-repeat bottom left;
}
* html body#toronto .meta-block .dose-links {
	background: transparent url(images/content/block-bottom-toronto-ie6.gif) no-repeat bottom left;
}

/* ----- Category Sepcific Images ----- */

body#toronto form#user-register fieldset legend,
#myfavourites .afavourite span.topic,
#myfavourites .afavourite h4 {
	color:#0075AD;
}

/* ------------ Forum ----------- */

body#toronto #forum thead{
	background-color:#0075AD;
}
body#toronto .post-information .submitted span{
	color:#0075AD;
}
body#toronto.ntype-forum .node .links{
	background-color:#0075AD;
}
body#toronto.ntype-forum .node .links a, body#toronto #forum thead a {
  color:#fff;
}

/* ------------ Top 10 ----------- */

body#toronto .top10-title{
	background: transparent url(images/content/t_top10.gif) no-repeat top left;
}
body#toronto .taxonomy-right{
	color:#0075AD;
}

/* --------- Steals and Deals --------- */

body#toronto .ntype-stealsanddeals table table tr td{
	border:1px solid #BCD9F0;
}
body#toronto .ntype-stealsanddeals .steals-content h3{
	color:#0075AD;
}

/* ------------ Editors Blog----------- */

body#toronto a.editors-blog {
	background: transparent url(images/editorsblog/eblog_tile_t.jpg) no-repeat top left;
}

/* --------- Archive --------- */

body#toronto #archive-container .archive_month li a,
body#toronto #archive-container li.active li.active p,
body#toronto #archive-container #archive-categories li.active{
	color:#0075AD;
}
/* Language Thickbox */
#vd_Language_Selector h2 {
	background: transparent url(/themes/DailyDose/images/montreal_modal_t.gif) no-repeat scroll left top;
}

/* ---------- Little Black Book categories listing ---------- */

body#toronto div#lbb_categories {
	padding-top: 6px;
	height: 103px;
	background: #275274 url(images/lbb/lbb_toronto_bg.gif) no-repeat top left;
	width: 524px;
}

body#toronto div#lbb_categories a, body#toronto div#lbb_categories h5 {
	color:#fff;
}
/* download link */
.node .content p.downloadlink {
  font-style:italic;
  font-size: 18px !important;
  margin: 10px 0pt;
  line-height: 38px;
  background-repeat: no-repeat;
  background-position: 0 50%;
  background-image: url(images/download_t.gif);
}
.downloadlink a {
  padding-left: 43px;
  text-decoration: underline;
  border-bottom: none !important;
}


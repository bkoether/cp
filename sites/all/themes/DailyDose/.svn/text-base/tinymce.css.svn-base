p {
  color: #1A1A1A;
  font-family:georgia,times,serif;
  font-size:13px;
}
p.dose-intro {
  font-size:10px;
  letter-spacing:0.12em;
  line-height:18px;
  margin-bottom:8px;
  padding:0;
  text-transform:uppercase;
}
p.dose-info {
  color:#666666;
  font-family:Arial,Lucida,Helvetica,sans-serif !important;
  font-size:12px;
  line-height:1.3em;
  margin:0 0 2px;
  padding:0;
}

.floatright {
  float: right;
  padding: 3px;
}
.floatleft {
  float: left;
  padding: 3px;
}
.floatrightborder {
  float: right;
  padding: 3px;
  border: 1px solid #ccc;
}
.floatleftborder {
  float: left;
  padding: 3px;
  border: 1px solid #ccc;
}

